<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvGetTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getTop"/>

        <TextView
            android:id="@+id/tvGetBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="getBottom"/>

        <TextView
            android:id="@+id/tvGetY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="getY"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Total"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvGetLocationOnScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="getLocationOnScreen"/>

    <TextView
        android:id="@+id/tvGetLocationInWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="getLocationInWindow"/>

    <TextView
        android:id="@+id/tvGetGlobalVisibleRect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="getGlobalVisibleRect"/>

    <TextView
        android:id="@+id/tvGetLocalVisibleRect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="getLocalVisibleRect"/>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@android:color/holo_blue_light"/>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_orange_light"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>