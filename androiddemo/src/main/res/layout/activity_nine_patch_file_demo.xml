<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/npfa_tv"
            android:text="引用原名资源"/>

        <ImageView
            style="@style/npfa_iv"
            android:src="@drawable/n_ic_loading"/>


        <TextView
            style="@style/npfa_tv"
            android:text="引用别名资源"/>

        <ImageView
            style="@style/npfa_iv"
            android:src="@drawable/n_ic_loading_alias"/>


        <TextView
            style="@style/npfa_tv"
            android:text="抖动处理"/>

        <ImageView
            style="@style/npfa_iv"
            android:src="@drawable/n_ic_loading_dither_true"/>

        <TextView
            style="@style/npfa_tv"
            android:text="不抖动处理"/>

        <ImageView
            style="@style/npfa_iv"
            android:src="@drawable/n_ic_loading_dither_false"/>

    </LinearLayout>
</ScrollView>